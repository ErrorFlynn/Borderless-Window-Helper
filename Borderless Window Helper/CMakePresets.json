{
    "version": 2,
    "configurePresets": [
        {
            "name": "clang",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build-clang",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            },
            "environment": {
                "CXXFLAGS": "-fsanitize=address -fno-omit-frame-pointer",
                "LDFLAGS": "-fsanitize=address"
            }
        }
    ]
}
